{
  "name": "survivejs-site",
  "private": true,
  "version": "2.0.0",
  "description": "SurviveJS site",
  "author": "Juho Vepsalainen <bebraw@gmail.com>",
  "scripts": {
    "start": "node ./antwar.bootstrap.js develop",
    "build": "node ./antwar.bootstrap.js build && npm run sitemap && npm run copy-demos",
    "deploy": "gh-pages -d build && npm run purge_cf",
    "fetch-books": "scripts/fetch-books.sh",
    "sitemap": "cd build && sitemap-static --prefix=https://survivejs.com/ > sitemap.xml",
    "lint": "eslint . --ext js --ext jsx --ignore-path .gitignore --cache",
    "purge_cf": "node ./utils/purge_cf.js",
    "test": "npm run lint",
    "check_links": "hyperlink build/index.html",
    "prepush": "npm test",
    "copy-demos": "cp -rf ../react/project_source/builds build/demos"
  },
  "dependencies": {
    "@survivejs/components": "0.0.5",
    "front-matter": "^2.1.2",
    "loader-utils": "^1.1.0",
    "lodash": "^4.17.4",
    "marked": "^0.3.6",
    "moment": "^2.18.1",
    "prism-languages": "github:survivejs/prism-languages",
    "prismjs": "github:bebraw/prism#backend-hooks",
    "react": "^15.6.1",
    "react-router-dom": "^4.1.2",
    "remove-markdown": "^0.2.1"
  },
  "devDependencies": {
    "antwar": "^0.19.0",
    "antwar-rss-plugin": "^0.19.0",
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.8",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "clean-webpack-plugin": "^0.1.16",
    "cloudflare4": "^0.2.5",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.4.1",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-prettier": "^2.1.2",
    "express": "^4.15.4",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "gh-pages": "^1.0.0",
    "husky": "^0.14.3",
    "hyperlink": "^3.0.0",
    "json-loader": "^0.5.7",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "prettier": "^1.5.3",
    "raw-loader": "^0.5.1",
    "react-router": "^4.1.2",
    "sass-loader": "^6.0.6",
    "serve-static": "^1.12.4",
    "sitemap-static": "^0.2.0",
    "style-loader": "^0.18.2",
    "title-case": "^2.1.1",
    "url-loader": "^0.5.9",
    "webpack": "^3.5.3",
    "webpack-dev-server": "^2.7.1",
    "webpack-merge": "^4.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/survivejs/site.git"
  },
  "homepage": "https://www.survivejs.com",
  "bugs": {
    "url": "https://github.com/survivejs/site/issues"
  },
  "keywords": ["site", "antwar"],
  "licenses": "MIT"
}
